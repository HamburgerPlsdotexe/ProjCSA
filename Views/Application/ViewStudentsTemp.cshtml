    <div class="maincontent">
        <div class="table2">
            <div class="center">
                <div class="red">@TempData["Temporary"]</div> @*error message if there is no class/students.*@
            </div>
            <table style="width:100%">
                <tr>
                    
                    @if (Model.Students.Count == 0)
                    {

                    }
                    else
                    {
                        <th>@Html.DisplayNameFor(model => model.Students.FirstOrDefault().Fname)</th>
                        <th>Date</th>
                    }
                </tr>

                @foreach (var item in Model.Students)
                {
                    <tr>
                        <td>
                            <a>
                                <div class="inner-pfps">
                                    @Html.DisplayFor(modelItem => item.Fname)

                                    <img id="myimg" height="125" width="50" />
                                    @*<img src="~/App_Start/bird.jpeg" />*@
                                </div>
                            </a>
                        </td>

                        <td>
                            <div class="checkbox">

                                @Html.CheckBox("checkbox")
                            </div>
                        </td>

                    </tr>
                }
            </table>
        </div>
